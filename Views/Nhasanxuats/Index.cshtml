@model IEnumerable<QuanLyBanHang.Models.Nhasanxuat>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Quản lý Nhà sản xuất</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mansx)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tennsx)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diachi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mansx)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tennsx)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diachi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Mansx" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Mansx" class="btn btn-success">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Mansx" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
